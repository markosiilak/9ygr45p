# Docker Configuration
# Copy this file to .env and update with your values

# Backend Configuration
BACKEND_PORT=8000
BACKEND_APP_ENV=local
BACKEND_APP_DEBUG=true
BACKEND_APP_KEY=
BACKEND_DB_CONNECTION=sqlite
BACKEND_PUBLIC_URL=http://localhost:8000

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_API_BASE_URL=http://localhost:8000
FRONTEND_API_BASE_URL_SERVER=http://backend:8000

# Docker Network
DOCKER_NETWORK_NAME=ticket-network
DOCKER_NETWORK_DRIVER=bridge

# Docker Image Names
BACKEND_IMAGE_NAME=ticket-backend
FRONTEND_IMAGE_NAME=ticket-frontend
